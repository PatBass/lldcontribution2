{% extends "::Layout/layout.html.twig" %}
{% block title %}Sign In - {{ parent() }}{% endblock %}
{% block body %}

    <div class="bg">
        <div class="bg-2">
            {% include('MainBundle:Common:header2.html.twig') with { active:''} %}
            <!--============================== content ================================-->
            <section id="content" class="row">
                <div class="container-fluid" style="position: relative; top: 50px;">
                    <div class="row">
                        <div class="col-sm-offset-3 col-sm-6">
                            <div class="panel panel-default">
                                <div class="panel-body" id="panel-body-sign-in">
                                    <div class="row" >
                                        <div id="display-error-login" class="col-sm-10 col-sm-offset-1 alert alert-danger alert-login" style="text-align: center;border: 1px solid crimson;display: none;">
                                            {% if app.session.flashbag.has('no-token') %}
                                                <button type="button" data-toggle="tooltip" data-placement="top" title="Close" class="close" data-dismiss="alert">x</button>
                                                {% for message in app.session.flashbag.get('no-token') %}
                                                    <div id="errorForm">{{ message|trans() }}</div>
                                                {% endfor %}
                                            {% endif %}
                                        </div>
                                        <div class="col-sm-1"></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-10 col-sm-offset-1" style="text-align: center;">
                                            <p style="color: lightblue;"><i class="glyphicon glyphicon-lock"></i> Access</p>
                                            <form action="{{ path('lld_account') }}" method="post">
                                                <div class="modal-body">

                                                    <div class="form-group">
                                                        <input type="text" name="code" id="code" class="form-control" placeholder="Type your code here please" required="required" />
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="submit" class="form-control btn btn-primary" value="Log In" />
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3"></div>
                    </div>
                </div>
            </section>
        </div>

    </div>

    {% include('MainBundle:Common:aside.html.twig') %}
    {% include('MainBundle:Common:footer.html.twig') %}
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        function openNav() {
            document.getElementById('mySideNav').style.width = "250px";
        }

        function closeNav() {
            document.getElementById('mySideNav').style.width = "0";
        }
    </script>

{% endblock %}





